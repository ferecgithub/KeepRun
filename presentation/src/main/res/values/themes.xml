<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeepRun" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryVariant">@color/lightGrey</item>
        <item name="colorOnPrimary">@color/lightGrey</item>
        <item name="colorSecondary">@color/lightGreen</item>
        <item name="colorSecondaryVariant">@color/darkGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorOnSurface">@color/normalText</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layers</item>
        <item name="android:statusBarColor">@color/lightGreen</item>
    </style>
</resources>